---
pagination:
  data: collections.all
  size: 999
  alias: entries
layout: layouts/home.njk
permalink: /page-list/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber }}/{% endif %}
---

<h1 class="sr-only">all pages</h1>

<table class="page-table">
  <thead>
    <th class="page-table__cell">url</th>
    <th class="page-table__cell">title</th>
  </thead>
  <tbody>
    {%- for entry in entries %}
      <tr>
        <td>
          <a href="{{ entry.url }}" class="page-table__cell">
            <code>{{ entry.url }}</code>
          </a>
        </td>
        <td class="page-table__cell">{{ entry.data.title }}</td>
      </tr>
    {%- endfor %}
  </tbody>
</table>
